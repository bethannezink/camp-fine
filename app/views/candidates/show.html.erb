<div class="container-fluid">
  <div class="jumbotron" >
    <h1><%= @candidate.name %></h1>
    <ul>
      <li><%= "#{@candidate.position} representing #{@candidate.state}" %> </li>
      <li><%= "Party: #{@candidate.party_name}" %> </li>
      <li><%= "First Elected: #{@candidate.first_elected}" %> </li>
      <li><%= "Total Raised: #{number_to_currency(@candidate.total)}" %> </li>
      <li><%= "Total Spent: #{number_to_currency(@candidate.spent)}" %> </li>
      <li><%= "Cash on Hand: #{number_to_currency(@candidate.cash_on_hand)}" %> </li>
    </ul>
  </div>

<section class="container">
  <div class="col-xs-6">
    <div class="jumbotron">
    <h3>Contributions:</h3>
      <% @contributions.each do |contribution| %>
      <li><%= link_to contribution.donor.name, contribution.donor %></li>
      <li><%= "Total: #{number_to_currency(contribution.total)}" %></li>
      <%end%>
    </div>
  </div>

  <div class="col-xs-6">
   <div class="jumbotron">
    <h3>Top Industries:</h3>
      <ul>
        <% @industry_contributions.each do |ic| %>
        <li><%= link_to ic.industry.name, ic.industry %></li>
        <li><%= "Total: #{number_to_currency(ic.total)}" %></li>
        <% end %>
      </ul>
  </div>
</section>
</div>